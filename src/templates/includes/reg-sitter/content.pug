                        .col-6.col-sm-7.reg-column
                            .reg-input-wrap
                                input#dogsType.reg-input(type="text" name="dogsType")
                                label(for="dogsTypeCheck").reg-label-checkbox
                                    input#dogsTypeCheck.reg-input(type="checkbox" name="dogsTypeCheck")
                                    span Беру любые породы
                        .col-12
