section.order.section-padding
    .container
        .big-box
            form.order-form#sendRequestToSitter(action="#")
                .order-wrap
                    .order-panel
                        .row
                            .col-4.col-sm-4.col-md-2.align-self-center
                                a.order-link-back.transition(href="./")
                                    i.fas.fa-angle-left
                                    span назад
                            .col-12.col-sm-12.col-md-8.align-self-center
                                h1.order-title.text-center Отправить запрос ситтеру <span>Анастасии Р.</span>
                            .col-12.offset-sm-3.col-sm-6.col-md-2.align-self-center
                                img.order-avatar(src="https://via.placeholder.com/150")
                    .order-content
                        .row
                            .col-12
                                label.order-label Когда вы хотите оставить собаку?
                            .col-12.col-sm-6
                                label.order-label-date(for="dateFrom")
                                    span Отдадите
                                    input#dateFrom.dateFrom(type="text" name="dateFrom")
                            .col-12.col-sm-6
                                label.order-label-date(for="dateTo")
                                    span Заберете
                                    input#dateTo.dateTo(type="text" name="dateTo")
                            .col-12
                                label(for="orderTel").order-label Ваш номер телефона
                            .col-12.col-sm-6
                                .order-input-wrap
                                    input#orderTel.order-input(type="tel" name="orderTel" placeholder="+380(50)XXX-XX-XX")
                            .col-12
                                .order-dog-list
                                    .order-dog
                                        .row
                                            .col-md-6.col-sm-12.col-12
                                                label.order-label-date(for="orderName")
                                                    span Имя собаки
                                                    input#orderName.orderName(type="text" name="orderName")
                                            .col-md-6.col-sm-12.col-12
                                                label.order-label-date(for="orderType")
                                                    span Порода
                                                    input#orderType.orderType(type="text" name="orderType")
                                            .col-md-6.col-sm-12.col-12
                                                label.order-label-date(for="orderYear")
                                                    span Лет
                                                    input#orderYear.orderYear(type="text" name="orderYear")
                                            .col-md-6.col-sm-12.col-12
                                                label.order-label-date(for="orderMonth")
                                                    span Месяцев
                                                    input#orderMonth.orderMonth(type="text" name="orderType")
                                            .col-md-6.col-sm-12.col-12
                                                label.reg-label Пол собаки
                                                    .reg-checkbox-wrap
                                                        label(for="orderGenderMale").reg-checkbox-label
                                                            input#orderGenderMale.orderGenderMale.reg-checkbox(type="radio" name="gender" value="male")
                                                            span Мальчик
                                                        label(for="orderGenderFemale").reg-checkbox-label
                                                            input#orderGenderFemale.orderGenderFemale.reg-checkbox(type="radio" name="gender" value="female")
                                                            span Девочка
                                            .col-md-6.col-sm-12.col-12
                                                label.reg-label Размер собаки
                                                    .reg-checkbox-wrap.order-checkbox-wrap
                                                        label(for="orderMini").reg-checkbox-label
                                                            input#orderMini.orderMini.reg-checkbox(type="radio" name="orderSize" value="orderMini")
                                                            span Мини (до 5кг)
                                                        label(for="orderSmall").reg-checkbox-label
                                                            input#orderSmall.orderSmall.reg-checkbox(type="radio" name="orderSize" value="orderSmall")
                                                            span Малый (5-10кг)
                                                        label(for="orderMiddle").reg-checkbox-label
                                                            input#orderMiddle.orderMiddle.reg-checkbox(type="radio" name="orderSize" value="orderMiddle")
                                                            span Средний (10-20кг)
                                                        label(for="orderBig").reg-checkbox-label
                                                            input#orderBig.orderBig.reg-checkbox(type="radio" name="orderSize" value="orderBig")
                                                            span Большой (20-40кг)
                                                        label(for="orderGiant").reg-checkbox-label
                                                            input#orderGiant.orderGiant.reg-checkbox(type="radio" name="orderSize" value="orderGiant")
                                                            span Огромный (40+кг)
                                    .order-dog-add
                                        a#addDog(href="#").order-dog-add-link Добавить собаку
                            .col-12
                                label(for="orderText").order-label Сообщение догситтеру
                            .col-12
                                .order-textarea-wrap
                                    textarea#orderText.order-textarea(name="orderText" placeholder="+380(50)XXX-XX-XX")
                            .col-12
                                .order-calc-wrap
                                    p.order-calc-text.text-center <b>Формула расчета:</b> 1000 ₽ x 1 собака x 0 суток
                                    p.order-calc-text.text-center Ориентировочная стоимость передержки: <b>0 ₽</b>
                                    p.order-calc-text.text-center Точную стоимость необходимо согласовать с догситтером. Оплата наличными.
                            .col-12
                                p.text-center.order-text среднее время ответа на запрос — <b>38 минут</b>
                            .col-12
                                .more-btn.text-center
                                    input(type="submit" value="Отправить").more.mybtn.mybtn-orange.reg-btn
